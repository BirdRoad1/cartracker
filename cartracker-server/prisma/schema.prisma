generator client {
  provider = "prisma-client-js"
  output   = "../src/.generated/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WifiNetwork {
  id        Int      @id @default(autoincrement())
  ssid      String?
  bssid     String
  rssi      Int
  flags     String
  frequency Int
  createdAt DateTime @default(now())

  LocationUpdate   LocationUpdate? @relation(fields: [locationUpdateId], references: [id])
  locationUpdateId Int?
}

model LocationUpdate {
  id        Int           @id @default(autoincrement())
  userAgent String?
  ip        String
  latitude Float?
  longitude Float?
  accuracy Float?
  networks  WifiNetwork[]
  createdAt DateTime      @default(now())
}
